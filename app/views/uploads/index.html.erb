<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Uploads</h1>

<table>
  <thead>
    <tr>
      <th>Attachment Filename</th>
      <th>Attachment Filesize</th>
      <th>Contact Id</th>
      <th>Processed At</th>
      <th>Status</th>
      <th>Organization Id</th>
      <th>Uploader Contact Id</th>
      <th>Type</th>
      <th>Attachment Content Type</th>
      <th>Attachment Updated At</th>
      <th>Total Records</th>
      <th>Auto Process</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.attachmentFileName %></td>
        <td><%= upload.attachmentFileSize %></td>
        <td><%= upload.contactId %></td>
        <td><%= upload.processedAt %></td>
        <td><%= upload.status %></td>
        <td><%= upload.organizationId %></td>
        <td><%= upload.uploaderContactId %></td>
        <td><%= upload.uploadType %></td>
        <td><%= upload.attachmentContentType %></td>
        <td><%= upload.attachmentUpdatedAt %></td>
        <td><%= upload.totalRecords %></td>
        <td><%= upload.autoProcess %></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

